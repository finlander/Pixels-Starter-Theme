{
  "name": "booncon/pix-base-theme",
  "type": "wordpress-theme",
  "license": "MIT",
  "description": "booncon PIXELS base theme for WordPress projects. With some help from Sage 9.0.0",
  "homepage": "https://github.com/booncon/pix-base-theme/README.md",
  "authors": [
    {
      "name": "Thomas Hurd",
      "email": "thomas.hurd@pixels.fi",
      "homepage": "https://github.com/seennothurd"
    }
  ],
  "keywords": [
    "wordpress"
  ],
  "support": {
    "issues": "https://github.com/booncon/pix-base-theme/issues"
  },
  "autoload": {
    "psr-4": {
      "Roots\\Sage\\": "src/lib/Sage/"
    }
  },
  "require": {
    "php": ">=5.5.0",
    "composer/installers": "~1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1",
    "phpmd/phpmd": "^2.4.2"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs",
      "vendor/bin/phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
    ]
  }
}
