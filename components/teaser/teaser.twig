{#
 # Template for a single content's teaser.
 #}

<article class="teaser teaser-{{ post.post_type }}" id="teaser-{{ post.ID }}">

	{% block content %}

		<h2 class="teaser-title teaser-title-{{ post.post_type }}">
      <a href="{{ post.link }}">{{ post.title }}</a>
    </h2>

		<p>{{post.get_preview}}</p>

		{% if post.get_thumbnail %}
			<img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}">
		{% endif %}

	{% endblock %}

</article>
