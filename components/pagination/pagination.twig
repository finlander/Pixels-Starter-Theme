{#
 # Template for pagination.
 #}

{% if pagination %}
  <nav class="pagination-nav" aria-label="{{ pagination_title }}">
    <ul class="pagination {{ classes }}">
      {% if pagination.prev %}
        <li class="page-item {{ pagination.prev.link|length ?: 'disabled'}}">
          <a class="page-link" href="{{ pagination.prev.link }}" {{ pagination.prev.link|length ?: 'tabindex="-1"'}}>{{ __('Previous', 'pixels-text-domain') }}</a>
        </li>
      {% endif %}
      {% for page in pagination.pages %}
        <li class="page-item {{ page.current ? 'active' }}">
          <a class="page-link" href="{{ page.link }}">{{ page.title }}{{ page.current ? __('<span class="sr-only">(current)</span>', 'pixels-text-domain') }}</a>
        </li>
      {% endfor %}
      {% if pagination.next %}
        <li class="page-item {{ pagination.next.link|length ?: 'disabled'}}">
          <a class="page-link" href="{{ pagination.next.link }}" {{ pagination.next.link|length ?: 'tabindex="-1"'}}>{{ __('Next', 'pixels-text-domain') }}</a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
